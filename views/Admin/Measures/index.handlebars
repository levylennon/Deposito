<div class="col-12">
    <div class="card social-card">
        <div class="card-body text-center">
            <h2 class="text-facebook mb-20"><i class="fas fa-balance-scale"></i></h2>
            <h3 class="text-facebook fw-700">Unidade de Medida</h3>
            <hr class="my-4 rgba-white-light">
            <div class="nav pt-2 justify-content-center">
                <nav class="nav nav-pills flex-column flex-sm-row">
                    <a class="btn btn-outline-primary btn-lg mr-3" data-toggle='tab' href="#New">Adicionar</a>
                    <a class="btn btn-outline-primary btn-lg mr-3" data-toggle='tab' href="#Find">Pesquisar</a>
                    <a class="btn btn-outline-primary btn-lg disabled" data-toggle='tab' href="#" >Conversão de Medida</a>
                </nav>

            </div>
        </div>
    </div>

</div>


<div class="tab-content">
    <div class="tab-pane" role='tabpanel' id='New'>
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3>Cadastro</h3>
                </div>
                <div class="card-body">

                    <form class="forms-sample" id='form_add'>
                        <div class="form-group row">
                            <label for="Description" class="col-sm-3 col-form-label">Descrição</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control form-control-center" id="Description"
                                    placeholder="Digite aqui..." name="Description" required=''>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Abbreviation" class="col-sm-3 col-form-label">Abreviação</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control form-control-center" placeholder="Digite aqui..."
                                    id="Abbreviation" name="Abbreviation">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Gravar</button>

                    </form>

                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane" role='tabpanel' id='Find'>
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3>Pesquisar</h3>
                </div>
                <div class="card-body">
                    <table id="data_table" class="table table-hover">
                        <thead>
                            <tr>
                                <th>Descrição</th>
                                <th class="nosort">Abreviação</th>
                                <th class="nosort">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each Data}}
                            <tr>
                                <td>{{Description}}</td>
                                <td>{{Abbreviation}}</td>
                                <td>
                                    <div class="table-actions">
                                        <button type="button" class="btn btn-icon btn-primary" onclick="view('{{_id}}')"
                                            data-toggle="modal" data-target="#Modal"><i class="ik ik-eye"></i></button>
                                        <button type="button" class="btn btn-icon btn-success" onclick="edit('{{_id}}')"
                                            data-toggle="modal" data-target="#Modal"><i
                                                class="ik ik-edit-2"></i></button>
                                        <button type="button" class="btn btn-icon btn-danger"
                                            onclick="delet('{{_id}}')"><i class="ik ik-trash-2"></i></button>
                                    </div>
                                </td>
                            </tr>
                            {{else}}
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Modal  --}}
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" style="display: none;"
  aria-hidden="true">
  <div class="modal-dialog  modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
            aria-hidden="true">×</span></button>
      </div>
      <div class="modal-body">
        <form class="forms-sample" id='EditForm'></form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>